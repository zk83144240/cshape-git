<Window x:Class="MyBooksManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyBooksManager.Views"
        xmlns:vm="clr-namespace:MyBooksManager.ViewModels"
        mc:Ignorable="d"
        Window.WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <DataGrid 
                Name="MyGrid"
                ItemsSource="{Binding Books}" 
                AutoGenerateColumns="False"
                CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="1*" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="书名" Width="3*" Binding="{Binding Title}"/>
                    <DataGridTextColumn Header="作者" Width="3*" Binding="{Binding Author}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Vertical" Grid.Column="1" >
                <TextBlock Text="书名" Margin="5"/>
                <TextBox FontSize="18" Text="{Binding NewTitle,UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="作者" Margin="5"/>
                <TextBox FontSize="18" Text="{Binding NewAuthor,UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="添加新书籍" Margin="5" Command="{Binding AddBookCommand}"/>
                <Button Content="更新选中书籍" Margin="5" Command="{Binding UpdateBookCommand}"
                        CommandParameter="{Binding ElementName=MyGrid,Path=SelectedItem}"
                        Background="Blue" Foreground="White"/>
                <Button Content="删除选中书籍" Command="{Binding DeleteBookCommand}" 
                        CommandParameter="{Binding ElementName=MyGrid,Path=SelectedItem}" 
                        Background="#FFE51400" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
