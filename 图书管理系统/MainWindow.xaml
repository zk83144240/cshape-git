<Window x:Class="图书管理系统.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:图书管理系统"
        mc:Ignorable="d"
        Title="图书管理系统1" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="151*"/>
            <RowDefinition Height="188*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="482*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.ColumnSpan="2" Grid.RowSpan="4" Name="listView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="序号" Width="100" DisplayMemberBinding="{Binding BId}"/>
                    <GridViewColumn Header="书名" Width="120" DisplayMemberBinding="{Binding BName}"/>
                    <GridViewColumn Header="作者" Width="120" DisplayMemberBinding="{Binding BAuthor}"/>
                    <GridViewColumn Header="时间" Width="200" DisplayMemberBinding="{Binding BTime}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="1" Orientation="Vertical" Grid.ColumnSpan="2" Margin="51,0,0,0" Grid.RowSpan="4">
           
            <TextBlock Text="书名" Margin="5" TextAlignment="Center"/>
            <TextBox Name="textBox1" Width="260" Height="30" Margin="5" Text="{Binding BName}"  TextAlignment="Center"/>
            <TextBlock Text="作者" Margin="5" TextAlignment="Center"/>
            <TextBox Name="textBox2" Width="260" Height="30" Margin="5" Text="{Binding BAuthor}"  TextAlignment="Center"/>
            
            
            <Button Width="260" Height="30" Margin="5" Content="添加" Click="Add_Click"/>
            <Button Width="260" Height="30" Margin="5" Content="删除" Click="Delete_Click"/>
            <Button Width="260" Height="30" Margin="5" Content="修改" Click="Update_Click"/>
            <Button Width="260" Height="30" Margin="5" Content="查询" Click="Select_Click"/>

        </StackPanel>
    </Grid>
</Window>
