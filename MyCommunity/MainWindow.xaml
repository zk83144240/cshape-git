<Window x:Class="MyCommunity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCommunity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Background="Gray">
            <Label FontSize="25" Content="SN1" Canvas.Left="134" Canvas.Top="155" HorizontalAlignment="Left" Height="49" VerticalAlignment="Center" Width="56"/>
            <TextBox BorderBrush="Black"  FontSize="25" Canvas.Left="242" TextWrapping="Wrap" Text="{Binding Sn1}" Canvas.Top="155" Width="536" HorizontalAlignment="Left" Height="49" VerticalAlignment="Center"/>
            <Label FontSize="25" Content="SN" Canvas.Left="134" Canvas.Top="249" Height="49" Width="56" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox BorderBrush="Black" FontSize="25" Canvas.Left="242" TextWrapping="Wrap" Text="{Binding Sn}" Canvas.Top="249" Width="536" Height="49" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button FontSize="25" Content="按我提取SN" Command="{Binding GetSnCommand}" Background="Aquamarine" Canvas.Left="355" Canvas.Top="350" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="200"/>
        </Canvas>
    </Grid>
</Window>
